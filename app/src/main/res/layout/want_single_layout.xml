<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textviewsingle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/descsingletv"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/descsingletv"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Name"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/my_image_view_single_tv" />

            <TextView
                android:id="@+id/descsingletv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textviewsingle"
                android:layout_marginBottom="-1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Description"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textviewsingle"
                card_view:layout_constraintVertical_bias="0.041" />

            <ImageView
                android:id="@+id/my_image_view_single_tv"
                android:layout_width="152dp"
                android:layout_height="125dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="113dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="-1dp"
                android:layout_toLeftOf="@+id/textviewsingle"
                android:layout_toStartOf="@+id/textviewsingle"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/camera2"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>